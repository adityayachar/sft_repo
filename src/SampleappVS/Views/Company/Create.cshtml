@model Company

@{
    ViewBag.Title = "New Company";
}

<h2>@ViewData["Title"]</h2>

<form asp-controller="Company" asp-action="Create" method="post" class="form-horizontal" role="form">
    <div class="form-horizontal">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <table>
                <tr>
                    <label asp-for="Name" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </tr>
                <tr style="padding-top:5px">
                    <label asp-for="Age" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="Age" class="form-control" />
                        <span asp-validation-for="Age" class="text-danger"></span>
                    </div>
                </tr>
                <tr style="padding-top:5px">
                    <label asp-for="Address" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="Address" class="form-control" />
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                </tr>
                <tr style="padding-top:5px">
                    <label asp-for="Salary" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="Salary" class="form-control" />
                        <span asp-validation-for="Salary" class="text-danger"></span>
                    </div>
                </tr>
            </table>
          
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>